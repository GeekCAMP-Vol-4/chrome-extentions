{
  "manifest_version": 3,
  "version": "0.1",
  "name": "Chrome Extension Template",
  "description": "description",
  "action": {
    "default_popup": "./dest/index.html",
    "default_icon": "./dest/images/pad.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage", "identity"]
}
